<%- include("partials/header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <% newListItems.forEach(function(item) { %>
      <form action="/del" method="post">
        <div class="item">
          <input type="checkbox" name="delItem" id="checkbox" value="<%= item._id %>" onChange="this.form.submit()">
          <p><%=  item.name  %></p>
          
          
        </div>
      </form>
      
      <% }); %>

      <form class="item" action="/todo" method="post"> 
        <input type="text" required name="newItem" placeholder="Add New Item" autocomplete="off">
        <button type="submit">+</button>
      </form>
  </div>

<%- include("partials/footer") -%>
